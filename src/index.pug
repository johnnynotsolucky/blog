---
pagination:
  data: collections.post
  reverse: true
  size: 10
  resolve: values
---

extends /main.pug

block content
	each post in pagination.pages.length ? pagination.pages[0] : []
		div
			h3
				a(href=post.url) #{post.data.title}
				span.datetime= post.data.date
	div.actions: a(href="/archive") Archive
